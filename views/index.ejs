<!doctype html>
<html lang="en" id="index">
  <head> 
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Book</title>
    <link rel="stylesheet" href="styles/main.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body id="booklist">
    
    <header class="py-3 mb-3 ">
      
      <div class="container-fluid d-grid" style="grid-template-columns: 3fr 2fr ;">
        <div class="d-flex align-items-center" >
          <form class="rounded-4 w-100 me-3 " role="search">
            <input type="search" id="search" class="form-control search-bar" placeholder="Search..." aria-label="Search" style="border: 2px solid #517b39; background-color: beige; transition: box-shadow 1s, border-color 1s; " >
          </form>
        </div>
       
          <div class=" d-flex flex-row-reverse align-items-end">
            <a href="#" class=" rounded-circle d-block link-body-emphasis text-success-emphasis dropdown-toggle " style="width: 52px; height: 52px; border: 2px solid #517b39; overflow: hidden; transition: box-shadow 1s, border-color 1s;"data-bs-toggle="dropdown" aria-expanded="false">
              <img src="data:image/jpeg;base64,<%=listItems[4] %>" alt="mdo" style="width: 52px; height: 52px; object-fit: cover;" class="rounded-circle">
            </a>
            
            <ul class="dropdown-menu text-small shadow rounded " style="border: 3px solid #252724; background-color: rgba(9, 10, 17);">
              <li><a class="dropdown-item" href="#">New project...</a></li>
              <li><a class="dropdown-item" href="#">Settings</a></li>
              <li><a class="dropdown-item" href="#">Profile</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="#">Sign out</a></li>
            </ul>
          </div>
      
      </div>
    <hr id = "hr">
    </header>
    <% for(let i = 0; i < listItems.length; i++) { %>  
  <div id="bookContainer" style="opacity: 0; transition: opacity 2s;">
     <div class="abook" data-rating="10" data-title="You Can Negotiate Anything - by Herb Cohen" data-date="2023-08-02">
        <div id="imageText">
          <img src="data:image/jpeg;base64,<%=listItems[i] %>" id="image" alt="Book Cover">
          <h2 id ="title">
            <a href="/book/NegotiateAnything" id="titleBook"><%=title[i] %> </a>
          </h2>
        </div>
        <div id="text">
          <p id ="text"><%= text[i] %></p>
        </div>   
      </div> 
      </div>
    </div>
    <% } %>

    <script>          
      document.getElementById('search').addEventListener('input', function() {
      const searchTerm = this.value.toLowerCase(); // Get the search term
      const books = document.querySelectorAll('.abook'); // Select all book divs

      books.forEach(book => {
      const titleElement = book.querySelector('h2 a'); // Get the <a> element inside <h2>
      const titleText = titleElement.textContent.toLowerCase(); // Get the text from the <a> element
      // Check if the title includes the search term
      if (titleText.includes(searchTerm)) {
          book.style.display = ''; // Show the book if it matches
      } else {
          book.style.display = 'none'; // Hide it if it doesn't match
      }
      });
      });


        document.addEventListener("DOMContentLoaded", function() {
        const containers = document.querySelectorAll('#bookContainer');
        containers.forEach((container, index) => {
        setTimeout(function() {
        container.style.opacity = '1';
        }, 1700 + index * 500); // 3 seconds plus an additional 500ms for each container
        });
        });


    </script>
  <!-- Bootstrap JS and Popper.js -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

  </body>
</html>
